<html	xmlns="http://www.w3.org/1999/xhtml"
		xmlns:h="http://java.sun.com/jsf/html"
     	xmlns:f="http://java.sun.com/jsf/core"
      	xmlns:p="http://primefaces.org/ui">
	<h:head>
		<h:outputLabel value="Add/Edit an Author!"/>
	</h:head>
	<h:body>
		<p:panel header="Author Details" style="width :700;">
			<p:panelGrid columns="2" id="authorEditPanelGrid">
				<p:outputLabel value ="First Name: "/> <p:inputText id="firstNameID" value="#{authorMB.author.firstname}"/>
				<p:outputLabel value ="Last Name: "/> <p:inputText id="lastNameID" value="#{authorMB.author.lastname}"/>
				<p:outputLabel value ="Phone: "/> <p:inputText id="phoneID" value="#{authorMB.author.phone}"/>
				<p:outputLabel value ="Street: "/> <p:inputText id="streetID" value="#{authorMB.address.street}"/>
				<p:outputLabel value ="City: "/> <p:inputText id="cityID" value="#{authorMB.address.city}"/>
				<p:outputLabel value ="State: "/> <p:inputText id="stateID" value="#{authorMB.address.state}"/>
				<p:outputLabel value ="ZipCode: "/> <p:inputText id="zipcodeID" value="#{authorMB.address.zipcode}"/>
				<p:outputLabel value ="credentials: "/> <p:inputText id="credentialsID" value="#{authorMB.author.credentials}"/>
				<p:outputLabel value ="Short Bio.: "/> <p:inputTextarea id="short_bioID" rows="6" cols="33" value="#{authorMB.author.short_bio}" />
				<p:button value="save" outcome=""/>
			</p:panelGrid>
		</p:panel>
	</h:body>
</html>